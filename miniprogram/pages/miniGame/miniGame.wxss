.game-container {
  display: flex;
  flex-flow: column;
  padding: 10px;
  font-size: 14px;
}

.game-container .game-top {
  display: flex;
  justify-content: space-between;
}

.garbage-info {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.game-icon {
  display: flex;
  flex-flow: column;
  margin-right: 10px;
}

.game-container .garbage-img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  /* margin: 10px auto; */
}

.game-container text {
  padding: 5px 0;
}

.game-container .icon-next {
  font-size: 30px;
  color: #83cdd9;
  padding: 0;
  margin: auto 0;
}

.game-container .icon-wen {
  font-size: 30px;
  color: #ff7e10;
  padding: 0;
  margin: auto 0;
}

.bin-container {
  display: flex;
  flex-wrap: wrap;
}

.game-container .bin-img {
  width: 25%;
  height: 150px;
}

.garbage-similar, .garbage-feature {
  color: #ff8a5c;
}

.visibility-h {
  visibility: hidden;
}