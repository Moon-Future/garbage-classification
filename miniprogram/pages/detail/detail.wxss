.detail-container {
  display: flex;
  flex-flow: column;
  padding: 10px;
  font-size: 14px;
}

.detail-container .garbage-img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 10px auto;
}

.detail-container text {
  padding: 5px 0;
}

.bin-container {
  display: flex;
  flex-wrap: wrap;
}

.detail-container .bin-img {
  width: 25%;
  height: 150px;
}

.garbage-similar, .garbage-feature {
  color: #ff8a5c;
}